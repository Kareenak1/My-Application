<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".supervisordashboard">

    <!-- Greetings Text -->
    <TextView
        android:id="@+id/greetings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good morning, User"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Profile Placeholder -->
    <ImageView
        android:id="@+id/profile_placeholder"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/baseline_account_circle_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Navigation Links -->
    <TextView
        android:id="@+id/groups_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="52dp"
        android:clickable="true"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="Groups"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tasks_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="52dp"
        android:clickable="true"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="Tasks"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp" />

    <!-- ViewSwitcher for Groups and Tasks -->
    <ViewSwitcher
        android:id="@+id/view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/groups_nav"
        android:layout_marginTop="16dp">

        <!-- Groups Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Groups Placeholder -->
            <RelativeLayout
                android:id="@+id/groups_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:id="@+id/no_groups_placeholder_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="No groups created yet."
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/no_groups_placeholder_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nerd_amico"
                    android:visibility="visible" />
            </RelativeLayout>

            <!-- Groups RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/groups_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Generate Groups Button -->
            <Button
                android:id="@+id/generate_groups_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Groups"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp" />
            <ProgressBar
                android:id="@+id/loader"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- Tasks Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Tasks Placeholder -->
            <TextView
                android:id="@+id/no_tasks_placeholder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tasks created yet."
                android:layout_centerInParent="true"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasks_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Add Task Button -->
            <Button
                android:id="@+id/add_task_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Task"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp" />
        </RelativeLayout>
    </ViewSwitcher>
</RelativeLayout>
